<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_margin="12dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Android Networking Example" />

        <Button
            android:id="@+id/btn_damn_simple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Damn Simple (URL)" />

        <Button
            android:id="@+id/btn_asynctask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AsyncTask" />

        <Button
            android:id="@+id/btn_asynchttp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AsyncHttp" />

        <Button
            android:id="@+id/btn_simple_retrofit_callback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Simple Retrofit Callback" />

        <Button
            android:id="@+id/btn_simple_retrofit_coroutine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Simple Retrofit Coroutine" />

        <Button
            android:id="@+id/btn_simple_retrofit_rxjava"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Simple Retrofit RxJava" />

    </LinearLayout>

</ScrollView>